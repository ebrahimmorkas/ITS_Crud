<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITSAssignment.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITSAssignment.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ITS Assignment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (Context.Session.GetString("Role") == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["Title"]?.ToString() == "Users List" ? "active" : "")" asp-controller="Admin" asp-action="UsersList">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["Title"]?.ToString() == "Add Mumineen" ? "active" : "")" asp-controller="Admin" asp-action="AddMumineen">Add User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["Title"]?.ToString() == "Change Password" ? "active" : "")" asp-controller="Auth" asp-action="ChangePassword">Change Password</a>
                            </li>
                        }
                        else if (Context.Session.GetString("Role") == "user")
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["Title"]?.ToString() == "Update Profile" ? "active" : "")" asp-controller="Mumineen" asp-action="Add">Update Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["Title"]?.ToString() == "Change Password" ? "active" : "")" asp-controller="Auth" asp-action="ChangePassword">Change Password</a>
                            </li>
                        }
                    </ul>

                    @if (!string.IsNullOrEmpty(Context.Session.GetString("Its")))
                    {
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                            <button type="submit" class="btn btn-outline-light">Logout</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year - ITS Assignment</p>
            <p class="mb-0">Built with ❤️ using ASP.NET Core & Bootstrap</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
