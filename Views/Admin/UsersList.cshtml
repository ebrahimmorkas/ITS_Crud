@model IEnumerable<ITSAssignment.Web.Models.Entities.Mumineen>
@{
    ViewData["Title"] = "Users List";
    Layout = "_Layout";
}

<h2 class="text-center mb-4">All Users</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ITS</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Marital Status</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.Its</td>
                    <td>@(string.IsNullOrEmpty(user.Name) ? "Not Added" : user.Name)</td>
                    <td>@(user.Age == 0 ? "Not Added" : user.Age.ToString())</td>
                    <td>@(string.IsNullOrEmpty(user.Gender) ? "Not Added" : user.Gender)</td>
                    <td>@(string.IsNullOrEmpty(user.Mobile_number) ? "Not Added" : user.Mobile_number)</td>
                    <td>@(string.IsNullOrEmpty(user.Email_address) ? "Not Added" : user.Email_address)</td>
                    <td>@(string.IsNullOrEmpty(user.Marital_status) ? "Not Added" : user.Marital_status)</td>
                    <td>@(string.IsNullOrEmpty(user.Address) ? "Not Added" : user.Address)</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2">Change Password</button>
                        <!-- Delete Button Trigger -->
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@user.Id">
                            Delete
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@user.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel-@user.Id">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete <strong>@user.Name</strong> (ITS: @user.Its)?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-action="Delete" asp-controller="Admin" method="post">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-danger">Confirm Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
