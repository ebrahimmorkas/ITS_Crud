@model ITSAssignment.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h2 class="text-center mb-4">Login</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-3">
            <div class="card-body p-4">

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Its" class="form-label">ITS Number</label>
                        <input asp-for="Its" class="form-control" placeholder="Enter ITS number" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
